{
	"name": "@toolmate/core",
	"description": "Framework for editors.",
	"version": "0.1.0",
	"author": "Anatoly Voevodin",
	"license": "AGPL-3.0",
	"type": "module",
	"main": "dist/main.js",
	"types": "dist/main.d.ts",
	"exports": {
		".": "./dist/main.js",
		"./style": "./dist/assets/style.css"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"prepublishOnly": "npm run lint && npm run build",
		"build": "tsc --p ./tsconfig-build.json && vite build",
		"preview": "vite preview",
		"lint": "prettier --check . && eslint . && tsc --p ./tsconfig-build.json --noEmit",
		"prettify": "prettier --write ."
	},
	"dependencies": {
		"@kobalte/core": "^0.12.6",
		"@tabler/icons-webfont": "^3.1.0",
		"solid-js": "^1.8.15"
	},
	"devDependencies": {
		"@types/node": "^20.11.30",
		"@typescript-eslint/eslint-plugin": "^7.3.1",
		"@typescript-eslint/parser": "^7.3.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-solid": "^0.13.2",
		"path": "^0.12.7",
		"prettier": "^3.2.5",
		"sass": "^1.72.0",
		"typescript": "^5.2.2",
		"vite": "^5.2.0",
		"vite-plugin-dts": "^3.7.3",
		"vite-plugin-solid": "^2.10.2"
	},
	"homepage": "https://github.com/anvoevodin/toolmate-core",
	"url": "https://github.com/anvoevodin/toolmate-core",
